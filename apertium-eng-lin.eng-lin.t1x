  </section-def-attrs>

  <section-def-vars>
    <def-var n="number"/>
    <def-var n="animate"/>
    <def-var n="genre"/>
    <def-var n="temps_chunk"/>
    <def-var n="nbr_chunk"/>
    <def-var n="pers_chunk"/>
    <def-var n="caseFirstWord"/>
    <def-var n="EOS"/>
    <def-var n="verbfinal"/>
  </section-def-vars>

  <section-def-lists>
    <def-list n="en_majuscules">
      <list-item v="Monday"/>
      <list-item v="Tuesday"/>
      <list-item v="Wednesday"/>
      <list-item v="Thursday"/>
      <list-item v="Friday"/>
      <list-item v="Saturday"/>
      <list-item v="Sunday"/>
    </def-list>
  </section-def-lists>

  <section-def-macros>

    <def-macro n="conj_verb1" npar="2"> <!-- so far dealing only with present and past -->
      <choose>
        <when>
          <test>
            <or>
              <equal>
                <clip pos="1" side="tl" part="a_nom"/>
                <lit-tag v="np"/>
              </equal>
              <equal>
                <clip pos="1" side="tl" part="a_nom"/>
                <lit-tag v="n"/>
              </equal>
            </or>
          </test>
          <let>
            <var n="temps_chunk"/>
            <clip pos="1" side="sl" part="a_temps"/>
          </let>
          <let>
            <var n="verbfinal"/>
            <concat>
              <clip pos="2" side="tl" part="lem"/>
              <clip pos="2" side="tl" part="a_verb"/>
              <clip pos="2" side="tl" part="a_temps"/>
              <lit-tag v="p3"/>
              <clip pos="1" side="tl" part="a_nbr"/>
              <lit-tag v="aa"/>
            </concat>
          </let>
        </when>
        <otherwise>
          <choose>
            <when>
              <test>
                <and>
                  <equal>
                    <clip pos="1" side="sl" part="a_pers"/>
                    <lit-tag v="p3"/>
                  </equal>
                  <equal>
                    <clip pos="1" side="sl" part="a_nbr"/>
                    <lit-tag v="sg"/>
                  </equal>
                  <equal>
                    <clip pos="1" side="sl" part="a_gen"/>
                    <lit-tag v="nt"/>
                  </equal>
                </and>
              </test>
              <let>
                <var n="temps_chunk"/>
                <clip pos="1" side="sl" part="a_temps"/>
              </let>
              <let>
                <var n="verbfinal"/>
                <concat>
                  <get-case-from pos="1">
                    <clip pos="2" side="tl" part="lem"/>
                  </get-case-from>
                  <clip pos="2" side="tl" part="a_verb"/>
                  <clip pos="2" side="tl" part="a_temps"/>
                  <clip pos="1" side="tl" part="a_pers"/>
                  <lit-tag v="sp"/>
                  <lit-tag v="nn"/>
                </concat>
              </let>
            </when>
            <when> <!-- formal version of you -->
              <test>
                <and>
                  <equal>
                    <clip pos="1" side="sl" part="a_pers"/>
                    <lit-tag v="p2"/>
                  </equal>
                  <equal>
                    <clip pos="1" side="sl" part="a_nbr"/>
                    <lit-tag v="sp"/>
                  </equal>
                </and>
              </test>
              <let>
                <var n="temps_chunk"/>
                <clip pos="1" side="sl" part="a_temps"/>
              </let>
              <let>
                <var n="verbfinal"/>
                <concat>
                  <get-case-from pos="1">
                    <clip pos="2" side="tl" part="lem"/>
                  </get-case-from>
                  <clip pos="2" side="tl" part="a_verb"/>
                  <clip pos="2" side="tl" part="a_temps"/>
                  <clip pos="1" side="tl" part="a_pers"/>
                  <lit-tag v="pl"/>
                  <lit-tag v="aa"/>
                </concat>
              </let>
            </when>
            <otherwise>
              <let>
                <var n="temps_chunk"/>
                <clip pos="1" side="sl" part="a_temps"/>
              </let>
              <let>
                <var n="verbfinal"/>
                <concat>
                  <get-case-from pos="1">
                    <clip pos="2" side="tl" part="lem"/>
                  </get-case-from>
                  <clip pos="2" side="tl" part="a_verb"/>
                  <clip pos="2" side="tl" part="a_temps"/>
                  <clip pos="1" side="tl" part="a_pers"/>
                  <clip pos="1" side="tl" part="a_nbr"/>
                  <lit-tag v="aa"/>
                </concat>
              </let>
            </otherwise>
          </choose>
        </otherwise>
      </choose>
    </def-macro>

    <def-macro n="firstWord" npar="1">
      <choose>
        <when>
          <test>
              <equal>
                <clip pos="1" side="sl" part="_acr"/>
                <lit v=""/>
              </equal>
          </test>
          <choose>
            <when>
              <test>
                <equal>
                  <var n="EOS"/>
                  <lit v="true"/>
                </equal>
              </test>
              <modify-case>
                <clip pos="1" side="tl" part="lem"/>
                <lit v="aa"/>
              </modify-case>
              <let>
                <var n="caseFirstWord"/>
                <lit v="Aa"/>
              </let>
            </when>
            <otherwise>
              <let>
                <var n="caseFirstWord"/>
                <lit v="aa"/>
              </let>
            </otherwise>
          </choose>
        </when>
        <otherwise>
          <let>
            <var n="caseFirstWord"/>
            <lit v="aa"/>
          </let>
        </otherwise>
      </choose>
      <let>
        <var n="EOS"/>
        <lit v="false"/>
      </let>
    </def-macro>
  </section-def-macros>


  <section-rules>

    <rule comment="REGLA: ANTROPÒNIM">
      <pattern>
        <pattern-item n="ant"/>
      </pattern>
      <action>
        <!-- <call-macro n="firstWord">
          <with-param pos="1"/>
        </call-macro> -->
        <out>
          <chunk name="ant" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SN"/></tag>
              <tag><clip pos="1" side="tl" part="a_gen"/></tag>
              <tag><clip pos="1" side="tl" part="a_nbr"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

