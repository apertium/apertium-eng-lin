    <!--********************************* REGLES DE SV ***************************************************** -->

    <rule comment="RULE: VERB">
      <pattern>
        <pattern-item n="verbcj"/>
      </pattern>
      <action>

        <call-macro n="conj_verb1">
          <with-param pos="1"/>
        </call-macro>
        <choose>
          <!-- PRS, PAST -->
          <when>
            <test>
              <or>
                <equal>
                  <clip pos="1" side="tl" part="a_temps"/>
                  <lit-tag v="pres"/>
                </equal>
                <equal>
                  <clip pos="1" side="tl" part="a_temps"/>
                  <lit-tag v="past"/>
                </equal>
              </or>
            </test>
            <out>
              <chunk name="lemma_verb_pres" case="caseFirstWord">
                <tags>
                  <tag><lit-tag v="SV"/></tag>
          	      <tag><clip pos="1" side="tl" part="a_verb"/></tag>
          	      <tag><clip pos="1" side="tl" part="a_temps"/></tag>
          	      <tag><clip pos="1" side="tl" part="a_pers"/></tag>
          	      <tag><clip pos="1" side="tl" part="a_nbr"/></tag>
                </tags>
                <lu>
                  <lit v="prpers"/>
                  <lit-tag v="prn"/>
                  <lit-tag v="subj"/>
                  <clip pos="1" side="tl" part="a_pers" />
                  <var n="genre"/>
                  <clip pos="1" side="tl" part="a_nbr" />
                </lu>
                <b/>
                <lu>
          	      <var n="verbfinal"/>
          	      <clip pos="1" side="tl" part="lemq"/>
          	    </lu>
              </chunk>
            </out>
          </when>

          <!-- FUTURE -->
          <when>
            <test>
              <equal>
                <clip pos="1" side="sl" part="a_temps"/>
                <lit-tag v="fut"/>
              </equal>
            </test>
            <out>
              <chunk name="lemma_verb_fut" case="caseFirstWord">
                <tags>
                  <tag><lit-tag v="SV"/></tag>
                  <tag><clip pos="1" side="tl" part="a_verb"/></tag>
          	      <tag><clip pos="1" side="tl" part="a_temps"/></tag>
          	      <tag><clip pos="1" side="tl" part="a_pers"/></tag>
          	      <tag><clip pos="1" side="tl" part="a_nbr"/></tag>
                </tags>
                <lu>
                  <lit v="prpers"/>
                  <lit-tag v="prn"/>
                  <lit-tag v="subj"/>
                  <clip pos="1" side="tl" part="a_pers" />
                  <var n="genre"/>
                  <clip pos="1" side="tl" part="a_nbr" />
                </lu>
                <b/>
                <lu>
                  <lit v="will"/>
                  <lit-tag v="vbmod"/>
                  <lit-tag v="pres"/> <!-- pres? or inf? -->
                </lu>
                <b/>
                <lu>
                  <clip pos="1" side="tl" part="lem"/>
                  <clip pos="1" side="tl" part="a_verb" link-to="2"/>
                  <lit-tag v="inf"/>
                </lu>
              </chunk>
            </out>
          </when>

          <!-- INF -->
          <when>
            <test>
              <equal>
                <clip pos="1" side="tl" part="a_temps"/>
                <lit-tag v="inf"/>
              </equal>
            </test>
            <out>
              <chunk name="lemma_verb_inf" case="caseFirstWord">
                <tags>
                  <tag><lit-tag v="SV"/></tag>
                  <tag><clip pos="1" side="sl" part="a_temps"/></tag>
                </tags>
                <lu>
                  <lit v="to"/>
                  <lit-tag v="pr"/>
                </lu>
                <b/>
                <lu>
                  <clip pos="1" side="tl" part="whole"/>
                </lu>
              </chunk>
            </out>
          </when>
        </choose>

      </action>
    </rule>

    <rule comment="RULE: KOZALA(BE) INF"> <!-- kozala(be) komona(see) -->
      <pattern>
        <pattern-item n="kozala"/>
        <pattern-item n="inf"/>
      </pattern>
      <action>
        <call-macro n="conj_verb1">
          <with-param pos="1"/>
        </call-macro>
        <out>
          <chunk name="kozala_inf" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SV"/></tag>
              <tag><clip pos="1" side="tl" part="a_verb"/></tag>
              <tag><clip pos="1" side="tl" part="a_temps"/></tag>
              <tag><clip pos="1" side="tl" part="a_pers"/></tag>
              <tag><clip pos="1" side="tl" part="a_nbr"/></tag>
            </tags>
            <lu>
              <lit v="prpers"/>
              <lit-tag v="prn"/>
              <lit-tag v="subj"/>
              <clip pos="1" side="tl" part="a_pers" />
              <var n="genre"/>
              <clip pos="1" side="tl" part="a_nbr" />
            </lu>
            <b/>
            <lu>
      	      <var n="verbfinal"/>
      	      <clip pos="1" side="tl" part="lemq"/>
      	    </lu>
            <b/>
            <lu>
              <clip pos="2" side="tl" part="lem"/>
              <clip pos="2" side="tl" part="a_verb"/>
      	      <lit-tag v="pprs"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

    

    <rule comment="RULE: NOM VERB">
      <pattern>
        <pattern-item n="nom"/>
        <pattern-item n="verbcj"/>
      </pattern>
      <action>
        <call-macro n="conj_verb1">
          <with-param pos="2"/>
        </call-macro>
        <out>
          <chunk name="nom_verb" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SV"/></tag>
              <tag><clip pos="1" side="tl" part="a_nbr"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="a_nom"/>
              <clip pos="1" side="tl" part="a_nbr" link-to="2"/>
            </lu>
            <b/>
            <lu>
              <var n="verbfinal"/>
      	      <clip pos="2" side="tl" part="lemq"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>


    <!-- <rule comment="RULE: INF">
      <pattern>
        <pattern-item n="inf"/>
      </pattern>
      <action>
        <out>
          <chunk name="to_verb" case="caseFirstWord">
            <lu>
              <clip pos="2" side="tl" part="" />
              <clip pos="1" side="" part="a_temps"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule> -->

    <rule comment="RULE: SENT">
      <pattern>
        <pattern-item n="sent"/>
      </pattern>
      <action>
        <out>
          <chunk name="sent" case="caseFirstWord">
            <tags>
              <tag><lit-tag v="SENT"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
  </section-rules>
</transfer>

